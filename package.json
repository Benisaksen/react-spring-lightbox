{
  "name": "react-spring-lightbox",
  "version": "0.0.1",
  "description": "A flexible image gallery lightbox built with spring physics based animations and gestures",
  "author": "Tim Ellenberger <timellenberger@gmail.com>",
  "license": "MIT",
  "repository": "tim-soft/react-spring-lightbox",
  "bugs": {
    "url": "https://github.com/tim-soft/react-spring-lightbox/issues"
  },
  "homepage": "https://next-portfolio-git-master.tim-soft.now.sh/portfolio",
  "keywords": [
    "react",
    "spring",
    "lightbox",
    "image",
    "gallery",
    "modal",
    "gestures"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "engines": {
    "node": ">=8",
    "npm": ">=5"
  },
  "scripts": {
    "test": "cross-env CI=1 react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "build": "rollup -c",
    "start": "rollup -c -w",
    "prepare": "yarn run build",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{json,md}": [
        "prettier --write",
        "git add --force"
      ],
      "*.{js, jsx}": [
        "prettier --write",
        "eslint --no-ignore --fix",
        "git add --force"
      ]
    }
  },
  "peerDependencies": {
    "prop-types": ">=15.5.4",
    "react": ">=16.8",
    "react-dom": ">=16.8"
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/plugin-external-helpers": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "9",
    "cross-env": "^5.2.0",
    "eslint": "5.12.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-react-hooks": "^1.6.0",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-scripts": "^2.1.8",
    "rollup": "^1.7.3",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.2",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-peer-deps-external": "^2.2.0"
  },
  "files": [
    "dist"
  ],
  "dependencies": {}
}
